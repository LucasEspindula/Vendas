<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".balance.data.local.BalanceActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/value"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_saldo"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ti_value"
            app:layout_constraintStart_toStartOf="@id/ti_value" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remover_saldo"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ti_value"
            app:layout_constraintEnd_toEndOf="@id/ti_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>